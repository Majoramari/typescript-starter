{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "outDir": ".mj-lib",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@utils": ["utils"]
    }
  },
  "include": ["src"]
}
